{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@kanak/ui": ["../../packages/ui/src"],
      "@kanak/components": ["../../packages/components/src"],
      "@kanak/shared": ["../../packages/shared/src"],
      "@kanak/api": ["../../packages/api/src"],
      "@kanak/utils": ["../../packages/utils/src"],
      "@kanak/convex": ["../../packages/convex/src"],
      "@kanak/convex/_generated": ["../../packages/convex/src/_generated"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
