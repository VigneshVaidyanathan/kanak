{
  "name": "@kanak/convex",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./_generated/server": {
      "types": "./src/_generated/server.d.ts",
      "import": "./src/_generated/server.js",
      "require": "./src/_generated/server.js",
      "default": "./src/_generated/server.js"
    },
    "./_generated/api": {
      "types": "./src/_generated/api.d.ts",
      "import": "./src/_generated/api.js",
      "require": "./src/_generated/api.js",
      "default": "./src/_generated/api.js"
    },
    "./_generated/dataModel": {
      "types": "./src/_generated/dataModel.d.ts",
      "import": "./src/_generated/dataModel.d.ts",
      "require": "./src/_generated/dataModel.d.ts",
      "default": "./src/_generated/dataModel.d.ts"
    },
    "./src/_generated/api": {
      "types": "./src/_generated/api.d.ts",
      "import": "./src/_generated/api.js",
      "require": "./src/_generated/api.js",
      "default": "./src/_generated/api.js"
    },
    "./src/_generated/dataModel": {
      "types": "./src/_generated/dataModel.d.ts",
      "import": "./src/_generated/dataModel.d.ts",
      "require": "./src/_generated/dataModel.d.ts",
      "default": "./src/_generated/dataModel.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "convex:dev": "convex dev --once",
    "convex:deploy": "convex deploy",
    "convex:codegen": "convex codegen"
  },
  "dependencies": {
    "convex": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}
